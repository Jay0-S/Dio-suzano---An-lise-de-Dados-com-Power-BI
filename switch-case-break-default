let fruta = "Banana";

switch (fruta) {
  case "Laranja":
    console.log("Suco de Laranja");
    break;
    
  case "Banana":
  case "Morango":
  case "Manga":
    console.log("Vitamina de " + fruta);
    break; 
    
  case "Maça":
    console.log("Vitamina de Maça");
    break;
  default:
  console.log("Suco/Vitamina desconhecido")
    }

//for
for (let contador = 0; contador <= 5; contador++) {
  console.log(contador);
  console.log("Aumentando o contador ")
}

//for 
let pontosDeVidas = 0

for(i=0; i<=10; i++){
  pontosDeVidas += 1
  console.log("Tomou poção mágica " + i)
}
console.log(pontosDeVidas + " Totais")
